<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!--
      Client-specific Charge override table. Holds only the fields impacting calculation
      and references m_charge fields (amount, min_cap, max_cap) from Charge JPA class.
      Nulls mean: no override; fallback to m_charge values.
    -->

    <changeSet author="paystack" id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="m_client_charge_override"/>
            </not>
        </preConditions>
        <createTable tableName="m_client_charge_override">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_m_client_charge_override" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="charge_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <!-- Overrides based on org.apache.fineract.portfolio.charge.domain.Charge (m_charge) -->
            <column name="amount" type="DECIMAL(19, 6)"/>
            <column name="min_cap" type="DECIMAL(19, 6)"/>
            <column name="max_cap" type="DECIMAL(19, 6)"/>
        </createTable>
    </changeSet>

    <changeSet author="paystack" id="2">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="m_client_charge_override"/>
            <not>
                <foreignKeyConstraintExists foreignKeyName="fk_client_charge_override_client"/>
            </not>
        </preConditions>
        <addForeignKeyConstraint baseTableName="m_client_charge_override" baseColumnNames="client_id"
                                 referencedTableName="m_client" referencedColumnNames="id"
                                 constraintName="fk_client_charge_override_client"/>
        <addForeignKeyConstraint baseTableName="m_client_charge_override" baseColumnNames="charge_id"
                                 referencedTableName="m_charge" referencedColumnNames="id"
                                 constraintName="fk_client_charge_override_charge"/>
        <addUniqueConstraint tableName="m_client_charge_override" columnNames="client_id, charge_id"
                             constraintName="uk_client_charge_override_client_charge"/>
    </changeSet>

    <changeSet author="paystack" id="3" context="postgresql" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="m_client_charge_override"/>
            <not>
                <indexExists indexName="m_client_charge_override_idx_charge"/>
            </not>
        </preConditions>
        <sql>
            create index if not exists m_client_charge_override_idx_charge on m_client_charge_override(charge_id);
            create index if not exists m_client_charge_override_idx_client on m_client_charge_override(client_id);
        </sql>
    </changeSet>

    <changeSet author="paystack" id="004_client_charge_override_indexes_mysql" context="mysql">
        <sql>
            create index m_client_charge_override_idx_charge on m_client_charge_override(charge_id);
            create index m_client_charge_override_idx_client on m_client_charge_override(client_id);
        </sql>
    </changeSet>

    <!-- Add is_active flag to enable/disable overrides without deleting -->
    <changeSet author="paystack" id="005_client_charge_override_is_active">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="m_client_charge_override" columnName="is_active"/>
            </not>
        </preConditions>
        <addColumn tableName="m_client_charge_override">
            <column name="is_active" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <!-- Add standard audit columns to support Spring Data auditing via AbstractAuditableCustom -->
    <changeSet author="paystack" id="006_client_charge_override_audit_columns">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="m_client_charge_override" columnName="createdby_id"/>
            </not>
        </preConditions>
        <addColumn tableName="m_client_charge_override">
            <column name="createdby_id" type="BIGINT" defaultValueComputed="NULL"/>
            <column name="created_date" type="datetime" defaultValueComputed="NULL"/>
            <column name="lastmodifiedby_id" type="BIGINT" defaultValueComputed="NULL"/>
            <column name="lastmodified_date" type="datetime" defaultValueComputed="NULL"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
