<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- Add permissions for charge split API operations -->
    <changeSet id="paystack-0004-add-charge-split-permissions" author="paystack">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="1">
                    SELECT COUNT(*) FROM m_permission WHERE code = 'CREATE_CHARGE_SPLIT'
                </sqlCheck>
            </not>
        </preConditions>
        <comment>Add permissions for charge split CRUD operations</comment>

        <!-- CREATE_CHARGE_SPLIT permission -->
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio" />
            <column name="code" value="CREATE_CHARGE_SPLIT" />
            <column name="entity_name" value="CHARGE_SPLIT" />
            <column name="action_name" value="CREATE" />
            <column name="can_maker_checker" valueBoolean="false" />
        </insert>

        <!-- UPDATE_CHARGE_SPLIT permission -->
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio" />
            <column name="code" value="UPDATE_CHARGE_SPLIT" />
            <column name="entity_name" value="CHARGE_SPLIT" />
            <column name="action_name" value="UPDATE" />
            <column name="can_maker_checker" valueBoolean="false" />
        </insert>

        <!-- DELETE_CHARGE_SPLIT permission -->
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio" />
            <column name="code" value="DELETE_CHARGE_SPLIT" />
            <column name="entity_name" value="CHARGE_SPLIT" />
            <column name="action_name" value="DELETE" />
            <column name="can_maker_checker" valueBoolean="false" />
        </insert>

    </changeSet>

</databaseChangeLog>
