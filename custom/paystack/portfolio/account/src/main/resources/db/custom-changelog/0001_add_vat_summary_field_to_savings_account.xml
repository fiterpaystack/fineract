<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="create-savings-account-extension-table" author="paystack">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ps_m_savings_account"/>
            </not>
        </preConditions>

        <!-- Create the extension table -->
        <createTable tableName="ps_m_savings_account">

            <column name="savings_account_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total_vat_amount_derived" type="DECIMAL(19,6)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>

            <column name="created_on_utc" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_on_utc" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Add foreign key constraint to main savings account table -->
        <addForeignKeyConstraint
                baseTableName="ps_m_savings_account"
                baseColumnNames="savings_account_id"
                constraintName="fk_savings_account_ext_account_id"
                referencedTableName="m_savings_account"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <!-- Add foreign key for created_by user -->
        <addForeignKeyConstraint
                baseTableName="ps_m_savings_account"
                baseColumnNames="created_by"
                constraintName="fk_savings_account_ext_created_by"
                referencedTableName="m_appuser"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

        <!-- Add foreign key for last_modified_by user -->
        <addForeignKeyConstraint
                baseTableName="ps_m_savings_account"
                baseColumnNames="last_modified_by"
                constraintName="fk_savings_account_ext_modified_by"
                referencedTableName="m_appuser"
                referencedColumnNames="id"
                onDelete="SET NULL"
                onUpdate="CASCADE"/>

        <!-- Create indexes for better query performance -->
        <createIndex tableName="ps_m_savings_account" indexName="idx_savings_ext_vat_amount">
            <column name="total_vat_amount_derived"/>
        </createIndex>

        <!-- Rollback configuration -->
        <rollback>
            <dropTable tableName="ps_m_savings_account" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
