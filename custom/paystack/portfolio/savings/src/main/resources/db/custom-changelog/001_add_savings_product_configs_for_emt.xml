<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="paystack" id="1">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <columnExists tableName="m_savings_product" columnName="is_emt_levy_applicable"/>
                </not>
                <not>
                    <columnExists tableName="m_savings_product" columnName="emt_levy_amount"/>
                </not>
                <not>
                    <columnExists tableName="m_savings_product" columnName="emt_levy_threshold"/>
                </not>
            </and>
        </preConditions>

        <comment>Add EMT levy columns to m_savings_product table</comment>

        <addColumn tableName="m_savings_product">
            <column name="is_emt_levy_applicable" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="override_global_emt_levy" type="boolean" defaultValueBoolean="false">
                <constraints nullable="true"/>
            </column>
            <column name="emt_levy_amount" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="emt_levy_threshold" type="decimal(19,6)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
